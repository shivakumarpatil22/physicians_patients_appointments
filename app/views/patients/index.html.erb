<div class="container">
  <h2>Patients</h2>
  <%= link_to "New", new_patient_path %><br>
  <%= will_paginate @patient, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Patient Name</th>
        <th>Physician Name</th>

        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.physician_name %></td>


        <td><%= link_to "Show",  patient_path(patient.id) %></td>
        <td><%= link_to "Edit",  edit_patient_path(patient.id) %></td>
        <td><%= link_to "Destroy", patient, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
      <%end%>
    </tbody>
  </table>
</div>